#include <stdio.h>
int main()
{
    int n = 0;
    scanf_s("%d", &n);
    while (n > 0 && n < 100)
    {
        if (n % 2 == 0)
        {
            n = n / 2;
        }
        if (n % 2 != 0)
        {
            n = n * 3 + 1;
        }

        if (n == 1)
        {
            printf("%d", n);
            break;
        }

    }
    return 0;
}
